{
  "name": "fire-safety-platform",
  "version": "1.0.0",
  "description": "Fire & Safety corporate platform monorepo",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "run-p dev:frontend dev:backend",
    "dev:frontend": "npm run dev --workspace=fire-safety-frontend",
    "dev:backend": "npm run dev --workspace=fire-safety-backend",
    "start": "npm run dev",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "form-data": "^4.0.5"
  }
}
